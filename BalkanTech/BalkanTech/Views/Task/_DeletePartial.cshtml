@using BalkanTech.Web.ViewModels.Task
@model TaskDeleteViewModel

<div class="modal-header">
    <h5 class="modal-title text-danger" id="deleteTaskModalLabel">Confirm Delete</h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
</div>
<div class="modal-body">
    <p>Are you sure you want to delete the task <strong>@Model.Name</strong>?</p>
    <p class="text-muted">Description: @Model.Description</p>
    <p>Room Number: <strong>@Model.RoomNumber</strong></p>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
    <form method="post" action="@Url.Action("Delete", "Task")">
        <input type="hidden" name="id" value="@Model.Id" />
        <input type="hidden" name="id" value="@Model.RoomId" />
        <input type="hidden" name="id" value="@Model.RoomNumber" />
        <button type="submit" class="btn btn-danger">Delete</button>
    </form>
</div>

