@using BalkanTech.Web.ViewModels.Room
@model RoomAddViewModel
@{
    ViewData["Title"] = "Add Room";
}

<h1 class="text-center">Add New Room</h1>

<form asp-action="Add" method="post">
    <div class="container mt-4">
        <div class="row">
            
                <div class="form-group">
                    <label asp-for="@Model.RoomNumber" class="control-label">Room Number</label>
                <input asp-for="@Model.RoomNumber" class="form-control" placeholder="Enter Room Number" />
                <span asp-validation-for="@Model.RoomNumber" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="@Model.Floor" class="control-label"></label>
                    <input asp-for="@Model.Floor" class="form-control" placeholder="Enter Floor Number" />
                    <span asp-validation-for="@Model.Floor" class="text-danger"></span>
                </div>

           
            <div class="form-group">
                <label asp-for="@Model.RoomCategoryId" class="form-label-add-edit">Select Category</label>
                <select asp-for="@Model.RoomCategoryId" class="form-control" aria-required="true" asp-items="@(new SelectList(Model.RoomCategories, "Id", "RoomType"))">
                    <option value="">Select Room Type</option>
                </select>
                <span asp-validation-for="@Model.RoomCategoryId" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <label asp-for="isAvailable" class="control-label">Available</label>
                <input asp-for="isAvailable" type="checkbox" />
                <span asp-validation-for="isAvailable" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group mt-3">
            <button type="submit" class="btn btn-primary">Add Room</button>
        </div>
    </div>
</form>