@using BalkanTech.Web.ViewModels;
@model IEnumerable<RoomsIndexViewModel>

@{
    ViewData["Title"] = "Room List";
}

<h1 class = "mt-3" style="text-align: center">Rooms List</h1>

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <a href="@Url.Action("Add", "Room")" class="btn btn-info">Add Room</a>
    </div>

    <div class="row">
        @foreach (var room in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Room Number: @room.RoomNumber</h5>
                        <h6 class="card-subtitle mb-2 text-muted">Floor: @room.Floor</h6>
                        <p class="card-text">Category: @room.RoomCategory</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <!-- Flex container for availability and button -->
                            <p class="card-text mb-0">@room.isAvailable</p>
                            <a href="@Url.Action("Details", "Room", new { roomNumber = room.RoomNumber })" class="btn btn-primary btn-sm">View Details</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
