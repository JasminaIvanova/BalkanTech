@{
    ViewData["Title"] = "Admin Panel";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-4">
            <div class="card text-center shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Users</h5>
                    <p class="card-text">Manage users in the system</p>
                    <a class="btn btn-primary" asp-area="" asp-controller="Admin" asp-action="ManageUsers">Manage Users</a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card text-center shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Room Categories</h5>
                    <p class="card-text">Manage room categories in the system.</p>
                    <a class="btn btn-primary" asp-area="" asp-controller="Admin" asp-action="ManageRoomCategories">Manage Room Categories</a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card text-center shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Task Categories</h5>
                    <p class="card-text">Manage task categories for operations.</p>
                    <a class="btn btn-primary" asp-area="" asp-controller="Admin" asp-action="ManageTaskCategories">Manage Task Categories</a>
                </div>
            </div>
        </div>
        <div class="col-md-4 mt-4">
            <div class="card text-center shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Room</h5>
                    <p class="card-text">Manage rooms</p>
                    <a class="btn btn-primary" asp-area="" asp-controller="Room" asp-action="Add">Add room</a>
                </div>
            </div>
        </div>
    </div>
</div>
